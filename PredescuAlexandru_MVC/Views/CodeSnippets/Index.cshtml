<h1>CodeSnippets</h1>
<p>
    <a asp-action="Create" class="btn btn-primary btn-create">Create New</a>
</p>
<table class="table table-bordered table-hover">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdCodeSnippet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContentCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdMember)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Revision)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateTimeAdded)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsPublished)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdCodeSnippet)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContentCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdMember)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Revision)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateTimeAdded)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsPublished)
                </td>
                <td>
                    @if (User.IsInRole("ADMIN"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.IdCodeSnippet" class="btn btn-primary btn-common">Edit</a>
                    }
                    <a asp-action="Details" asp-route-id="@item.IdCodeSnippet" class="btn btn-info btn-common">Details</a>
                    @if (User.IsInRole("ADMIN"))
                    {
                        <a asp-action="Delete" asp-route-id="@item.IdCodeSnippet" class="btn btn-danger btn-common" onclick="return confirm('Are you sure you want to delete this item?')">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>